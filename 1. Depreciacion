Algoritmo Depreciacion
	//Datos de entrada
	Definir costo Como Entero;
	Definir valorRec Como Entero;
	Definir vidaUtil Como Entero;
	
	//Datos de Salida
	Definir D Como Entero;
	
	
	//Proceso 
	costo <- 20000;
	valorRec <- 2000;
	vidaUtil <- 6;
	
	D <- (costo - valorRec) / vidaUtil;
	
	//Salida
	Escribir "Depreciación:", D;
	
	
FinAlgoritmo
